@model IEnumerable<CMS.Models.Claim>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Claims (Programme Coordinator)</title>
    <style>
        /* General body styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #121212; /* Dark background */
            background-image: url(https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.shutterstock.com%2Fsearch%2Frear-view-students-sitting&psig=AOvVaw3DEXjRZqs7ACE2_6eHLpSl&ust=1732386154588000&source=images&cd=vfe&opi=89978449&ved=0CBQQjRxqFwoTCJDtkL7H8IkDFQAAAAAdAAAAABAE);
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: white; /* White text color for contrast */
        }


        /* Transparent form container */
        .container {
            background-color: rgba(18, 18, 18, 0.8); /* Semi-transparent dark background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            max-width: 1000px;
            margin: 0 auto;
        }

        /* Heading style */
        h2 {
            font-size: 24px;
            color: #fff; /* White color for headings */
            text-align: center;
            margin-bottom: 20px;
        }


        /* Table styling */

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #333333; /* Dark table background */
            color: white; /* White text color */
            border: 1px solid #555;
        }

            .table thead {
                background-color: #007bff; /* Blue header */
                color: white;
            }

            .table th,
            .table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #444; /* Darker border */
            }

            /* Alternate row background color for better readability */
            .table tbody tr:nth-child(odd) {
                background-color: #444444; /* Darker odd rows */
            }

            /* Hover effect on table rows */
            .table tbody tr:hover {
                background-color: #555555; /* Highlight on hover */
            }

        /* Link styling for supporting document */
        a {
            color: #007bff; /* Blue links */
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline; /* Underline on hover */
            }
    </style>
</head>
<body>

  
    <div class="container">
        <h2>Tracking Claims</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>Supporting Document</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.AdditionalNotes</td>
                        <td>@claim.Status</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                            {
                                var SupportingDocumentPath = System.IO.Path.GetFileName(claim.SupportingDocumentPath);
                                <span>@SupportingDocumentPath</span> <!-- Display the file name as plain text -->
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>





